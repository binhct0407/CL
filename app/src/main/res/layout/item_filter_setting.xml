<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/filter_title_name"
        android:layout_width="wrap_content"
        android:layout_height="50.0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="test"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_toRightOf="@+id/filter_title_name"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="10.0dp"
            android:id="@+id/filter_content_1"
            android:gravity="center|right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="こだわらない" />

        <TextView
            android:id="@+id/filter_content_2"
            android:layout_weight="1"
            android:text="~"
            android:gravity="center|right"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:layout_marginLeft="10.0dp"
            android:id="@+id/filter_content_3"
            android:drawableRight="@drawable/angle_right"
            android:gravity="center|right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="こだわらない" />
    </LinearLayout>


</RelativeLayout>
