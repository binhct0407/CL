<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.couplink.app.activity.FilterFriendActivity">

    <include
        android:id="@+id/filter_friend_actionbar"
        layout="@layout/actionbar_filterfriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ListView
        android:id="@+id/filter_friend_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/filter_friend_btn_confirm_filter"

        android:layout_below="@+id/filter_friend_actionbar">

    </ListView>

    <Button
        android:id="@+id/filter_friend_btn_confirm_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_button"
        android:text="この条件で検索"
        android:textColor="@android:color/white" />

</RelativeLayout>