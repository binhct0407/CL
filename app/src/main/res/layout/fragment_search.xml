<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_user_default_background">

    <include
        android:id="@+id/include_search_actionbar"
        layout="@layout/actionbar_searchfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


    <FrameLayout
        android:id="@+id/fragment_search_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.srx.widget.PullToLoadView
            android:id="@+id/searchfragment_user_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/include_search_actionbar" />
    </FrameLayout>


</RelativeLayout>