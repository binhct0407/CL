<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:id="@+id/item_message_matched_layout_mached_user"
        android:layout_width="70.0dp"
        android:layout_height="70.0dp">

        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
            android:layout_centerVertical="true"
            app:hasBorder="false"
            android:src="@drawable/pic5"
            android:id="@+id/item_message_matched_icon_message_matched_user"
            android:layout_width="70.0dp"
            android:layout_height="70.0dp" />

        <TextView
            android:background="@drawable/ic_heart_matched_list"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="25.0dp"
            android:layout_height="25.0dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_message_matched_linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5.0dp"
        android:layout_marginLeft="5.0dp"
        android:layout_marginTop="5.0dp"
        android:layout_toRightOf="@+id/item_message_matched_layout_mached_user"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_message_matched_name_matched_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="わか"
            android:textColor="#58B5C4"
            android:textSize="19.0sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:textSize="10.0sp"
                android:id="@+id/txt_unread"
                android:textColor="@android:color/white"
                android:text=" 未返信 "
                android:background="@drawable/rounded_layout_txt_unread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_message_matched_detail_matched_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="メッセージのやりとりを開始しましょう！"
                android:textColor="#616161"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_margin="2dp"
        android:id="@+id/item_message_matched_txt_conor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_text_publicprofile_gray"
        android:text="イベント参加者"
        android:textColor="@android:color/white"
        android:textSize="10.0sp" />

</RelativeLayout>
