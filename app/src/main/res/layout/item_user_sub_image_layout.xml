<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/user_item_sub_image_padding">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_user_sub_image_border_background">

        <com.beardedhen.androidbootstrap.BootstrapThumbnail
            android:id="@+id/item_user_sub_image_image"
            android:layout_width="@dimen/user_image_image_height"
            android:layout_height="@dimen/user_image_image_height"
            app:bootstrapBrand="info"
            app:hasBorder="false"
            app:roundedCorners="true" />
    </FrameLayout>
</LinearLayout>